@using Warehouse.WebApp.AppCode
@model Warehouse.ViewModel.Users.SignUpViewModel


@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div style="margin-top: 20em;">

    @using (Html.BeginForm(NameHelper.SignUp.CreateNewUser, NameHelper.SignUp.Controller, FormMethod.Post))
    {
        <div>
            @Html.TextBoxFor(m => m.UserName)
        </div>
        <div>
            @Html.TextBoxFor(m => m.FirstName)
        </div>
        <div>
            @Html.TextBoxFor(m => m.LastName)
        </div>
        <div>
            @Html.TextBoxFor(m => m.Email)
        </div>
        <div>
            @Html.TextBoxFor(m => m.Password, new { @type = "password" })
        </div>
        <div>
            @Html.TextBoxFor(m => m.RepeatPassword, new { @type = "password" })
        </div>

        <div>
            <input type="submit" value="Create" />
        </div>
    }

</div>
